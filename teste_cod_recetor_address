// códio para identificar o MAC Address para estabelecer a ligação
#include <WiFi.h>
#include <esp_now.h>


void setup() 
{
    Serial.begin(115200);
    WiFi.mode(WIFI_STA);
    Serial.print("MAC Address: ");
    Serial.println(WiFi.macAddress());
}
void loop() 
{
  Serial.print("MAC Address: ");
    Serial.println(WiFi.macAddress());
    delay(5000);
}
